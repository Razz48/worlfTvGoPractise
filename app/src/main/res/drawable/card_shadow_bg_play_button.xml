<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="200dp"
                android:color="@color/tab_indicator_color"/>
            <corners android:radius="8dp"/> <!-- Corner radius to match CardView -->
        </shape>
    </item>
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_indicator_color"/> <!-- CardView background color -->
            <corners android:radius="8dp"/> <!-- Corner radius to match CardView -->
        </shape>
    </item>
</layer-list>

