<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected tab -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#545454"/> <!-- Background color for selected tab -->
            <stroke android:width="1dp" android:color="#929292"/> <!-- Border color for selected tab -->
            <corners android:radius="2dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Unselected tab -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background for unselected tab -->
            <stroke android:width="1dp" android:color="#929292"/> <!-- Border color for unselected tab -->
            <corners android:radius="2dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>