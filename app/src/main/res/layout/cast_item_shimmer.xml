<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/get_start"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cast_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_cast_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="farah khan"
        android:background="#545454"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="#545454"
        app:layout_constraintStart_toStartOf="@id/cast_img"
        app:layout_constraintTop_toBottomOf="@id/cast_img"
        app:layout_constraintEnd_toEndOf="@id/cast_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>