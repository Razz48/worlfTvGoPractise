<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_star</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="ExoStyledControls.Button.Center.PlayPause">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/play</item>
    </style>


    <!-- Style for the position text -->
    <style name="ExoStyledControls.TimeText.Position">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Style for the separator text -->
    <style name="ExoStyledControls.TimeText.Separator">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Style for the duration text -->
    <style name="ExoStyledControls.TimeText.Duration">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>


    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>
